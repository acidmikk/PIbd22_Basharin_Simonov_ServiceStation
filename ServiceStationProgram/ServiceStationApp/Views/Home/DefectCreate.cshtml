@{
    ViewData["Title"] = "Create Defect";
}
<div class="text-center">
    <h2 class="display-4">Создание неисправности</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Наименование неисправности:</div>
        <div class="col-8"><input type="text" name="name" id="name" size="35" /></div>
    </div>
    <div class="row">
        <div class="col-4">Описание:</div>
        <div class="col-8"><input type="text" name="discription" id="discription" /></div>
    </div>
    <div class="row">
        <div class="col-4">Автомобили:</div>
        <div class="col-8">
            <select id="carsId" name="carsId" multiple="multiple" class="form-control" asp-items="@(new SelectList(@ViewBag.Cars,"Id", "Name"))"></select>
        </div>
    </div>    
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Создать" class="btn btn-primary" />
            <a type="button" asp-action="Defect" class="btn btn-primary">Отмена</a>
        </div>
    </div>
</form>